{
  "name": "@vision/core",
  "author": "Bilo Lwabona",
  "version": "0.1.12",
  "description": "A Typescript library for frontend and backend shared code of the Vision platform.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "version": "yarn changelog",
    "dev": "yarn build:watch",
    "build": "npx tsc && bash ./scripts/build-dist.sh",
    "build:watch": "npx tsc -w",
    "test": "yarn test:unit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:clearCache": "jest --clearCache",
    "test:watch": "yarn test:unit --watchAll",
    "v:version": "node ./scripts/version.js"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "auto-changelog": "^2.4.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  }
}