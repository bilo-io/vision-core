{
  "name": "@aims/core",
  "author": "Bilo Lwabona",
  "version": "0.0.1",
  "description": "A Typescript library for frontend and backend shared code of the A.I.M.S. platform.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "scripts": {
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
